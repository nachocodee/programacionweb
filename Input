    <input type="text" placeholder="Mensaje"> <br> <!--placeholder: dejar un mensaje q dps se borra si ingresas algo-->
    <input type="text" value="Mensaje por defecto"> <br> <!--value: asignar valor por defecto-->
    <input type="text" readonly="readonly" value="mensaje"> <br> <!-- readonly: dejar un valor q no se puede borrar-->
    <input type="text" disabled value="mensaje 2"> <br><!--el dato no se sube-->
    <input type="text" title="guia para el usuario"> <br> <!--aparece un mensaje cuando se pasa el mouse por el input-->
    <input type="text" size="2"> <br><!--tamaño para el input-->

    <!--input para valores-->
    <input type="number"> <br>
    <input type="number" min="10" max="70" step="5"> <br><!--limite q quiera, step: de cuanto va subiendo, ej: d 5 en 5-->

    <!--input para buscar elementos-->
    <input type="search" placeholder="nombre producto"> <br>

    <!--input fecha y hora-->
    <input type="date"> <br>
    <input type="datetime-local"> <br> <!--hora y fecha-->
    <input type="time"> <br>

    <!--input para archivos-->
    <input type="file"> <br>
    <input type="file" accept=".ppt, .pptx"> <br> <!--para elegir solo archivos tipo ppt-->

    <input type="hidden" name="txtId"> <br> <!--sirve para ocultar alguna clave-->
    <input type="password"> <br>

